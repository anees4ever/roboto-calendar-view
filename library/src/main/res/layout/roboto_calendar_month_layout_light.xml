<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/robotoCalendarDateTitleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/roboto_calendar_month_background_light"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/leftButton"
        style="@style/RobotoCalendarMonthArrow"
        android:layout_width="@dimen/roboto_month_arrow_size"
        android:layout_height="@dimen/roboto_month_arrow_size"
        android:src="@drawable/ic_arrow_left"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/monthText"
        style="@style/RobotoCalendarMonthTextLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:tag="dateTitle"
        tools:text="September 2018" />

    <ImageView
        android:id="@+id/rightButton"
        style="@style/RobotoCalendarMonthArrow"
        android:layout_width="@dimen/roboto_month_arrow_size"
        android:layout_height="@dimen/roboto_month_arrow_size"
        android:src="@drawable/ic_arrow_right"
        tools:ignore="ContentDescription" />
</LinearLayout>