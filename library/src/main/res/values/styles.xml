<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->

    <style name="RobotoCalendarMonthArrow">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">@dimen/roboto_month_arrow_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginLeft">@dimen/roboto_month_arrow_margin</item>
        <item name="android:layout_marginRight">@dimen/roboto_month_arrow_margin</item>
    </style>

    <style name="RobotoCalendarMonthText">
        <item name="android:fontFamily">@font/metropolis_extrabold</item>
        <item name="android:textSize">@dimen/roboto_month_title_font_size</item>
        <item name="android:textColor">@color/roboto_calendar_month_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:fontFamily">@font/metropolis_extrabold</item>
        <item name="android:textSize">@dimen/roboto_day_of_week_font_size</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_week_font</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:fontFamily">@font/metropolis_extrabold</item>
        <item name="android:textSize">@dimen/roboto_day_of_the_month_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_the_month_font</item>
        <item name="android:gravity">center</item>
    </style>

</resources>